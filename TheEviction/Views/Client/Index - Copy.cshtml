    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ClientNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClientName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActiveFlg)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsOfficeAccessFlg)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDt)
